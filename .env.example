# Application Configuration
NODE_ENV=development
PORT=3000
APP_NAME=episode-registry

# AWS Configuration
AWS_REGION=eu-west-2
AWS_ACCESS_KEY_ID=your_access_key_id
AWS_SECRET_ACCESS_KEY=your_secret_access_key

# DynamoDB Configuration
DDB_TABLE=app_core
DDB_GSI1=GSI1
DDB_GSI2=GSI2

# AWS Cognito Configuration
COGNITO_USER_POOL_ID=eu-west-2_XXXXXXXXX
COGNITO_CLIENT_ID=xxxxxxxxxxxxxxxxxxxxxxxxxx
COGNITO_DOMAIN=your-domain.auth.eu-west-2.amazoncognito.com
JWT_ROLE_CLAIM=custom:role

# AWS Amplify Configuration (for deployment)
AMPLIFY_BRANCH=main
AMPLIFY_APP_ID=xxxxxxxxxxxxxxxxx

# Export Configuration
PDF_HEADER=Behavioral Episodes Registry
XML_NS=urn:episode-registry:v1

# Locale Configuration
DEFAULT_LOCALE=es-ES
DEFAULT_TIMEZONE=Europe/Madrid

# Security
CORS_ORIGIN=http://localhost:3000
SESSION_SECRET=your_session_secret_here
CSRF_TOKEN_SECRET=your_csrf_secret_here

# Doppler Configuration (Optional - for production)
DOPPLER_TOKEN=
DOPPLER_PROJECT=episode-registry
DOPPLER_CONFIG=dev

# Feature Flags
ENABLE_AUDIT_LOG=true
ENABLE_EMAIL_NOTIFICATIONS=false
ENABLE_FILE_UPLOADS=false

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# Monitoring (Optional)
CLOUDWATCH_LOG_GROUP=/aws/amplify/episode-registry
CLOUDWATCH_LOG_STREAM=ssr-server

# S3 Configuration (Optional - for file storage)
S3_BUCKET_NAME=
S3_REGION=eu-west-2