# Application Configuration
NODE_ENV=development
PORT=3000
APP_NAME=teaforms

# AWS Configuration - Using real AWS DynamoDB
AWS_REGION=eu-west-2
AWS_PROFILE=cgtaa  # Using cgtaa profile

# DynamoDB Configuration
DDB_TABLE=app_core
DDB_GSI1=GSI1
DDB_GSI2=GSI2
# No DDB_ENDPOINT means use real AWS DynamoDB

# AWS Cognito Configuration (will be configured later)
COGNITO_USER_POOL_ID=
COGNITO_CLIENT_ID=
JWT_ROLE_CLAIM=custom:role

# Local Development Authentication
LOCAL_DEVELOPMENT=false  # Set to true to use local auth bypass
JWT_SECRET=local-development-secret-change-in-production

# Redis for sessions
REDIS_URL=redis://localhost:6379

# Security
CORS_ORIGIN=http://localhost:3000
SESSION_SECRET=your_session_secret_here_change_in_production
CSRF_TOKEN_SECRET=your_csrf_secret_here_change_in_production

# Default Configuration
DEFAULT_LOCALE=es-ES
DEFAULT_TIMEZONE=Europe/Madrid

# Feature Flags
ENABLE_AUDIT_LOG=true
ENABLE_EMAIL_NOTIFICATIONS=false
ENABLE_FILE_UPLOADS=false

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100